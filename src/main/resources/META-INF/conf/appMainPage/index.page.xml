<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
      name="Выберите участок"
      html-title="Паспорт участка" >

<!--      style="background-color: #e2be2f;"-->

    <regions>
        <form id="indexForm">
            <fields>
                <text>
Приложение предназначено для оптимизации работы участковых врачей. Функционалом
предусмотрен просмотр списков пациентов по разным критериям, а также графическое отображение
критически важных показателей участка
                </text>
                <input-select-tree
                        id="inpSelectTree"
                        value-field-id="elementId"
                        query-id="treeOrgDistr"
                        no-label="true"
                        parent-field-id="parentId"
                        placeholder="Выберите участок"
                        badge-field-id="badge"
                        badge-color-field-id="status"
                        required="true">

                        <validations>
                            <condition id="checkOrgNotDistr"
                                       message="Выберите врачебный участок, а не организацию"
                                       field-id="inpSelectTree">${inpSelectTree.distrId} != -1</condition>
                        </validations>
<!--                    message="Выберите конкретный участок, а не организацию {inpSelectTree.distrId}"-->

                </input-select-tree>
            </fields>

            <toolbar place="bottomCenter">


                <button label="Подтвердить и найти"
                        confirm="true"
                        confirm-text="Вы уверены?"
                        confirm-title="Подтверждение"
                        confirm-ok-label="Да"
                        confirm-cancel-label="Нет"
                        color="success"
                        icon="fa fa-search">

                    <open-page page-id="attachment" route="/attachedFilteredByDistr">
                        <params>
                            <query-param name="distr" value="{inpSelectTree.distrId}" model="resolve" datasource="indexForm"/>
                        </params>
                    </open-page>


                </button>

            </toolbar>

        </form>

<!--        <html>-->
<!--            <content url="/templates/customCharts/first.jsp"/>-->
<!--        </html>-->



            <line collapsible="false">
                <form>
                    <fields>
                        <text id="field2">
                            Смертность по МО за полный предыдущий год
                        </text>
                    </fields>
                </form>
            </line>
            <chart width="1500" height="320" >
                <datasource query-id="smertn">
                </datasource>
                <bars x-field-id="shortName">
                    <bar field-id="count" label="Количество: "  color="#8884d8" has-label="false"/>
                </bars>
            </chart>


    </regions>
</page>