    <toolbar place="topLeft">

        <button id="b" label="Просмотр прикрепленных пациентов"
                color="info"
                icon="fa fa-search">

            <open-page page-id="callsFiltered" route="/callsFilteredByDistr" width="75%">
                <datasources>
                    <datasource id="page" route="/attachedFilteredByDistr" default-values-mode="defaults" query-id="calls">
                        <filters>
                            <like field-id="distr_id"
                                  param="distr"/>
                        </filters>
                    </datasource>
                </datasources>
            </open-page>
        </button>
