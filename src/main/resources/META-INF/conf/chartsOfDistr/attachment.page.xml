                                </datasource>
                <areas x-field-id="mnth" grid-stroke-dasharray="3 3">
                    <area field-id="gosp" label="Случаи госпитализации" line-type="linear" color="#8884d8" stroke-color="#5accc1"/>
                    <area field-id="neotl" label="Случаи неотложной помощи" line-type="linear" color="#82ca9d" stroke-color="#a4cc1f"/>
                </areas>
            </chart>
