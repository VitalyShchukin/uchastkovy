<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
      name="Информация о пациентах" id="callsPath">

    <datasources>
        <datasource id="ds" query-id="calls">
            <filters>
                <like field-id="distr_id" param="distr"/>
            </filters>
        </datasource>
        <datasource id="d" query-id="duch">
            <filters>
                <like field-id="distr_id" param="distr"/>
            </filters>
        </datasource>
    </datasources>

    <regions>

        <tabs lazy="false">

            <tab name="Адрес проживания, телефон">
                <table id="table1" datasource="ds">
                    <pagination
                            show-last="true"
                            show-count="always"/>
                    <columns>
                        <column text-field-id="fio" label="Фамилия И.О."/>
                        <column text-field-id="distr" label="Участок"/>
                        <column text-field-id="addr" label="Адрес по прикреплению"/>
                    </columns>
                    <toolbar place="topRight">
                        <group generate="columns,resize"/>
                    </toolbar>
                </table>
            </tab>

            <tab name="Контактный телефон">
                <table id="table2" datasource="ds">
                    <pagination
                            show-last="true"
                            show-count="always"/>
                    <columns>
                        <column text-field-id="fio" label="Фамилия И.О."/>
                        <column text-field-id="contact" label="Контактный телефон"/>
                        <column text-field-id="mo" label="Мед организация"/>
                    </columns>
                    <toolbar place="topRight">
                        <group generate="columns,resize"/>
                    </toolbar>
                </table>
            </tab>

            <tab name="Д-учет">
                <table id="table4" datasource="d">
                    <pagination
                            show-last="true"
                            show-count="always"/>
                    <columns>
                        <column text-field-id="fio" label="Фамилия И.О."/>
                        <column text-field-id="start_date" label="Дата постановки на Д-учет"/>
                        <column text-field-id="nosol_name" label="Наименование нозологического регистра"/>
                    </columns>
                    <toolbar place="topRight">
                        <group generate="columns,resize"/>
                    </toolbar>
                </table>
            </tab>

        </tabs>
    </regions>
</page>