<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
      name="Параметры запроса фильтра выборки">
    <regions>

        <tree value-field-id="elementId" label-field-id="name"
              parent-field-id="parentId">
            <toolbar place="bottomLeft">
                <button label="Фильтровать по distr">
                    <open-page page-id="callsFiltered" route="/filteredByDistr">
                        <params>
                            <query-param name="distr" value="{distrId}" model="resolve"/>
                        </params>
                    </open-page>
                </button>
            </toolbar>
            <datasource query-id="treeOrgDistr"/>
        </tree>

    </regions>
</page>