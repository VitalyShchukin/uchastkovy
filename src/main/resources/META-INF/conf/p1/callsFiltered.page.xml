<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
      name="{distrName}">
    <datasources>
        <datasource id="ds" query-id="calls">
            <filters>
                <like field-id="distr_id" param="distr"/>
            </filters>
        </datasource>
    </datasources>
    <regions>

        <form>
    <toolbar>
            <button label="Просмотр интерактивной информации по участку"
                    color="info">
                <open-page page-id="attachment" route="/attachedPeople" default-value="#{distr}">
                    <params>
                        <query-param name="distr" value="distr"/>
                    </params>
                </open-page>
            </button>
    </toolbar>
</form>


        <tabs lazy="false">

            <tab name="Графика">
                <table id="table1" datasource="ds">
                    <pagination
                            show-last="true"
                            show-count="always"/>
                    <columns>
                        <column text-field-id="fio" label="Фамилия И.О."/>
                        <column text-field-id="distr" label="Участок"/>
                        <column text-field-id="mo" label="Мед организация"/>
                    </columns>
                    <toolbar place="topRight">
                        <group generate="columns,resize"/>
                    </toolbar>
                </table>
            </tab>

            <tab name="Прикрепленное население">
                <table id="table2" datasource="ds">
                    <pagination
                            show-last="true"
                            show-count="always"/>
                    <columns>
                        <column text-field-id="fio" label="Фамилия И.О."/>
                        <column text-field-id="distr" label="Участок"/>
                        <column text-field-id="mo" label="Мед организация"/>
                    </columns>
                    <toolbar place="topRight">
                        <group generate="columns,resize"/>
                    </toolbar>
                </table>
            </tab>

            <tab name="Вакцинация">
                <table id="table3" datasource="ds">
                    <pagination
                            show-last="true"
                            show-count="always"/>
                    <columns>
                        <column text-field-id="fio" label="Фамилия И.О."/>
                        <column text-field-id="distr" label="Участок"/>
                        <column text-field-id="mo" label="Мед организация"/>
                    </columns>
                    <toolbar place="topRight">
                        <group generate="columns,resize"/>
                    </toolbar>
                </table>
            </tab>

            <tab name="Д-учет">
                <table id="table4" datasource="ds">
                    <pagination
                            show-last="true"
                            show-count="always"/>
                    <columns>
                        <column text-field-id="fio" label="Фамилия И.О."/>
                        <column text-field-id="distr" label="Участок"/>
                        <column text-field-id="mo" label="Мед организация"/>
                    </columns>
                    <toolbar place="topRight">
                        <group generate="columns,resize"/>
                    </toolbar>
                </table>
            </tab>
        </tabs>
    </regions>
</page>