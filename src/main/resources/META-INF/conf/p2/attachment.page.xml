<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-4.0"
      name="Диаграмма-область">
    <regions>
        <chart width="1230" height="250">
            <datasource query-id="attachment"/>
            <areas x-field-id="name" grid-stroke-dasharray="3 3">
                <area field-id="expenses" line-type="monotone" color="#8884d8" stroke-color="#8884d8"/>
                <area field-id="income" line-type="monotone" color="#82ca9d" stroke-color="#82ca9d"/>
            </areas>
        </chart>

        <chart width="730" height="250">
            <datasource query-id="attachment-dynamic"/>
            <bars x-field-id="name" grid-stroke-dasharray="3 3">
                <bar field-id="expenses" color="#8884d8"/>
                <bar field-id="income" color="#82ca9d"/>
            </bars>
        </chart>

        <chart width="730" height="250">
            <datasource query-id="attachment-dynamic"/>
            <pie center-x="150" center-y="120" inner-radius="50" outer-radius="80"
                 name-field-id="name" value-field-id="income" color="#82ca9d" has-label="true"/>
        </chart>

        <widget name="gr1" width="730" height="250"/>

    </regions>
</page>